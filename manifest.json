{
  "manifest_version": 3,
  "name": "OpenMode",
  "version": "1.0",
  "description": "Open all links in new tabs. Control behavior per site.",
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "OpenMode"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
